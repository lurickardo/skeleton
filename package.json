{
  "name": "skeleton",
  "version": "1.0.0",
  "description": "Lambda responsável pelo gerenciamento de abrigos do sistema Pluvial.",
  "author": "Beatriz Assunção, Ian Soares, Luiz Ricardo Santos, Nader Hadad Souza e Yumi Tokuo",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "start": "cls || clear && node -r ts-node/register --env-file=.env src/main.ts",
    "start:dev": "cls || clear && ts-node-dev --respawn --transpile-only --env-file=.env src/main.ts",
    "start:debug": "cls || clear && ts-node-dev --respawn --transpile-only --debug --env-file=.env src/main.ts",
    "start:prod": "cls || clear && node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "npx @biomejs/biome check --apply-unsafe src/"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.0.1",
    "@fastify/under-pressure": "^8.3.0",
    "fastify": "^4.25.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
