{
  "name": "skeleton",
  "version": "1.0.0",
  "description": "Generic software architecture framework in Node.js using Fastify, designed to provide a flexible and reusable foundation for application development.",
  "author": "Luiz Ricardo Santos",
  "private": true,
  "license": "MIT",
  "scripts": {
    "pipe": "bun run prebuild && bun run build && bun run postbuild",
    "prebuild": "rm -rf dist/ node_modules/",
    "build": "bun install && bun tsc",
    "postbuild": "cp package.json dist/ && cp bun.lockb dist/ && cd dist && bun install --production",
    "prd": "node --env-file=.env dist/src/main.js",
    "dev": "ts-node-dev --respawn --transpile-only --env-file=.env src/main.ts",
    "test": "jest --runInBand --coverage --config ./test/jest.config.json",
    "test:watch": "jest --runInBand --config ./test/jest.config.json --watch",
    "test:cov": "jest --runInBand --config ./test/jest.config.json --collect-coverage",
    "lint": "npx @biomejs/biome format ./ --write",
    "lint:check": "npx @biomejs/biome check ./src"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.0.1",
    "@fastify/under-pressure": "^8.3.0",
    "@types/node": "^20.10.6",
    "fastify": "^4.28",
    "http-status": "^1.7.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/jest": "^29.5.11",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:check && npm run test:cov && npm run build",
      "pre-push": "npm run lint:check && npm run test:cov && npm run build"
    }
  }
}
