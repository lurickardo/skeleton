{
  "name": "skeleton",
  "version": "1.0.0",
  "description": "Lambda responsável pelo gerenciamento de abrigos do sistema Pluvial.",
  "author": "Beatriz Assunção, Ian Soares, Luiz Ricardo Santos, Nader Hadad Souza e Yumi Tokuo",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "start": "cls || clear && node -r ts-node/register --env-file=.env src/main.ts",
    "start:dev": "cls || clear && ts-node-dev --respawn --transpile-only --env-file=.env src/main.ts",
    "start:debug": "cls || clear && ts-node-dev --respawn --transpile-only --debug --env-file=.env src/main.ts",
    "start:prod": "cls || clear && node dist/src/main",
    "test": "jest --runInBand --config ./test/jest.config.json",
    "test:watch": "jest --runInBand --config ./test/jest.config.json --watch",
    "test:cov": "jest --runInBand --config ./test/jest.config.json --collect-coverage",
    "lint": "npx @biomejs/biome format ./src --write",
    "lint:check": "npx @biomejs/biome check ./src",
    "test:cov-force-exit": "npm run test:cov -- --forceExit"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.0.1",
    "@fastify/under-pressure": "^8.3.0",
    "@types/node": "^20.10.6",
    "fastify": "^4.25.2",
    "http-status": "^1.7.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.2",
    "@types/jest": "^29.5.11",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "npx @biomejs/biome format",
      "npm run test:cov -- --forceExit"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
