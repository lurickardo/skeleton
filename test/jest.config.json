{
	"preset": "ts-jest",
	"moduleFileExtensions": ["js", "json", "ts"],
	"rootDir": "../",
	"collectCoverage": true,
	"coverageDirectory": "coverage",
	"collectCoverageFrom": [
		"src/**/*.{ts,js}",
		"!**/dto/**",
		"!**/*.schema.{ts,js}",
		"!**/*.route.{ts,js}",
		"!**/app.module.{ts,js}",
		"!**/main.{ts,js}",
		"!**/config/index.{ts,js}",
		"!**/plugins/*.{ts,js}"
	],
	"coverageThreshold": {
		"global": {
			"statements": 90,
			"branches": 80,
			"functions": 90,
			"lines": 90
		}
	},
	"testEnvironment": "node",
	"testMatch": ["**/tests/**/*.(js|ts)?(x)", "**/?(*.)+(spec|test).(js|ts)?(x)"],
	"modulePathIgnorePatterns": ["<rootDir>/dist", "<rootDir>/node_modules", "<rootDir>/coverage"]
}
