{
	"preset": "ts-jest",
	"moduleFileExtensions": ["js", "json", "ts"],
	"rootDir": "../",
	"collectCoverage": true,
	"coverageDirectory": "coverage",
	"collectCoverageFrom": [
		"src/**/*.{ts,js}",
		"!src/**/*.spec.{ts,js}",
		"!src/**/*.test.{ts,js}",
		"!src/**/*.module.{ts,js}",
		"!src/**/*.route.{ts,js}",
		"!src/**/*.schema.{ts,js}",
		"!src/**/dto/**/*.{ts,js}",
		"!src/plugins/**/*.{ts,js}",
		"!src/config/error/**/*.{ts,js}",
		"!src/config/index.{ts,js}",
		"!src/*.{ts,js}"
	],
	"coverageThreshold": {
		"global": {
			"statements": 95,
			"branches": 95,
			"functions": 95,
			"lines": 95
		}
	},
	"testEnvironment": "node",
	"testMatch": ["**/tests/**/*.(js|ts)?(x)", "**/?(*.)+(spec|test).(js|ts)?(x)"]
}
